# API Server Configuration
HTTP_PORT=8080

# Database Configuration
DATABASE_URL=postgres://taskflow:taskflow@postgres:5432/taskflow?sslmode=disable

# NATS Configuration
NATS_URL=nats://nats:4222
NATS_STREAM_NAME=TASKFLOW
NATS_CONSUMER_NAME=taskflow-worker

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_POLL_TIMEOUT=5s
WORKER_MAX_ATTEMPTS=3
WORKER_BACKOFF_BASE=2s
WORKER_BACKOFF_MAX=5m

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

# Optional: Custom worker ID (defaults to hostname-pid)
# WORKER_ID=worker-1